<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
      <% if admin_signed_in? %>
        <%= link_to "WCE 管理者", root_path, class:"header-title navbar-brand"%>
      <% else %>
        <%= link_to "メイン", root_path, class:"header-title navbar-brand"%>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <% if customer_signed_in?  %>
          <div class="nav-item mt-2 ml-5">
                ようこそ <%= current_customer.last_name %> さん
          </div>
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <li class="nav-item"><%= link_to "マイページ", customer_path(current_customer.id), class: 'btn btn-outline-secondary mx-3 my-1'  %></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-outline-secondary mx-3 my-1'  %></li>
          <% elsif current_admin %>
            <li class="nav-item"><%= link_to "会員一覧", admin_customers_path, class: 'btn btn-outline-secondary mx-3 my-1'  %></li>
            <li class="nav-item"><%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-outline-secondary mx-3 my-1'  %></li>
          <% else %>
            <li class="nav-item"><%= link_to "概要", about_path,class: 'btn btn-outline-secondary mx-3 my-1' %></li>
            <li class="nav-item"><%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-outline-secondary mx-3 my-1'  %></li>
            <li class="nav-item"><%= link_to "会員ログイン", new_customer_session_path, class: 'btn btn-outline-secondary mx-3 my-1'  %></li>
            <li class="nav-item"><%= link_to "管理者用", new_admin_session_path, class: 'btn btn-outline-secondary mx-3 my-1'  %></li>
          <% end %>
       </div>
    </div>
  </nav>
</header>