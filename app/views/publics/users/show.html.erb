<div class="container">
  <h2 class="my-5">マイページ</h2>
  <div class="row">
    <p>登録者情報</p>
    <p><%= link_to "編集する",edit_user_path, class:"btn btn-success ml-5"%></p>
    <table class="table">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @user.last_name %>   <%= @user.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @user.last_name_kana %>   <%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email%></td>
        </tr>
        <tr>
         <td>会員番号</td>
         <td><%= @user.namber%></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>